<style>
	/* Sección de Servicios */
	.servicios {
		padding: 60px 20px;
		background-color: #f9f9f9;
		font-family: Arial, sans-serif;
		text-align: center;
	}

	.titulo-seccion {
		font-size: 2.5rem;
		color: #333;
		margin-bottom: 40px;
	}

	.contenedor-tarjetas {
		display: flex;
		flex-direction: column;
		gap: 30px;
		justify-content: center;
		align-items: stretch;
	}

	@media (min-width: 768px) {
		.contenedor-tarjetas {
			flex-direction: row;
			gap: 50px;
		}
	}

	/* Tarjeta individual */
	.tarjeta {
		background-color: #fff;
		border-radius: 15px;
		box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
		max-width: 400px;
		overflow: hidden;
		transition: transform 0.3s ease-in-out;
	}

	.tarjeta:hover {
		/* transform: translateY(-10px); */
	}

	.tarjeta-imagen {
		width: 100%;
		height: 300px;
		object-fit: cover;
	}

	.tarjeta-contenido {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		align-items: center;
		gap: 0.25rem;
	}

	.tarjeta-contenido h3 {
		font-size: 1.8rem;
		color: #333;
		/* margin-bottom: 10px; */
	}

	.tarjeta-contenido p {
		font-size: 1rem;
		color: #666;
		line-height: 1.6;
		margin-bottom: 1rem;
	}

	.boton-reservar {
		/* Estilo base */
		display: inline-block;
		padding: 15px 35px;
		border-radius: 50px;
		background-color: #0f0f0f;
		color: #fff;
		text-decoration: none;
		font-weight: bold;
		border: 2px solid #a87f3e; /* Borde dorado */
		position: relative;
		overflow: hidden;
		transition: all 0.4s ease-in-out;
	}

	.boton-reservar span {
		position: relative;
		z-index: 2;
	}

	/* Efecto de brillo al pasar el cursor */
	.boton-reservar::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			45deg,
			#a87f3e,
			#e9d7a2,
			#a87f3e
		); /* Degradado de oro */
		transform: translateX(-100%);
		transition: transform 0.4s ease-in-out;
		z-index: 1;
	}

	.boton-reservar:hover::before {
		transform: translateX(0);
	}

	.boton-reservar:hover {
		color: #0f0f0f;
		border-color: #a87f3e;
	}

	.boton-reservar:hover span {
		color: #0f0f0f;
	}
</style>

