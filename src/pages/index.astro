---
import Layout from "../layouts/Layout.astro";
import Title from "../components/HeaderTitle.astro";
import Section from "../components/Section.astro";
import SectionTitle from "../components/SectionTitle.astro";
import SectionItems from "../components/SectionItems.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import img1 from "../../public/images/champloo.jpg";
---

<script is:inline>
	function openModal(src) {
		const modal = document.getElementById("imageModal");
		const modalImage = document.getElementById("modalImage");

		modalImage.src = src;
		modal.classList.remove("hidden");
	}

	function closeModal() {
		const modal = document.getElementById("imageModal");
		modal.classList.add("hidden");
	}
</script>

<Layout>
	<div class="relative h-[20vh] lg:h-[30vh] mb-8 mt-24">
		<!-- Video como fondo -->
		<video
			class="h-[20vh] lg:h-[30vh] w-full object-cover opacity-40 rounded-md"
			autoplay
			muted
			loop
		>
			<source src="/media/video.mp4" type="video/mp4" />
			Tu navegador no soporta videos HTML5.
		</video>

		<!-- Contenido encima del video -->
		<div class="absolute top-0 flex justify-center flex-col w-full h-full">
			<Title title="Blanca Miguel Villarmin" class="text-clamp" />
			<div
				class="flex flex-col items-center lg:flex-row lg:justify-center lg:gap-12"
			>
				<a
					href="tel:+34686634972"
					class="flex items-center gap-2 hover:underline"
				>
					<Icon name="phone" /> +34 686634972
				</a>
				<a
					href="mailto:blanca.mvillarmin@gmail.com"
					class="flex items-center gap-2 hover:underline"
				>
					<Icon name="email" /> blanca.mvillarmin@gmail.com
				</a>
				<a
					href="https://instagram.com/blancamiguel.makeup"
					target="_blank"
					class="flex items-center gap-2 hover:underline"
				>
					<Icon name="instagram" /> blancamiguel.makeup
				</a>
			</div>
		</div>
	</div>
	<Section>
		<SectionTitle title="PRENSA" />
		<SectionItems styles="grid grid-cols-3 gap-2 rounded-md">
			<img
				class="rounded-md overflow-hidden"
				src="https://placecats.com/neo/400/200"
				alt="Img 2"
				onclick="openModal(this.src)"
			/>
			<img
				class="rounded-md overflow-hidden"
				src="https://placecats.com/millie/400/200"
				alt="Img 1"
				onclick="openModal(this.src)"
			/>
			<img
				class="rounded-md overflow-hidden"
				src="https://placecats.com/bella/400/200"
				alt="Img 3"
				onclick="openModal(this.src)"
			/>
			<img
				class="rounded-md overflow-hidden"
				src="https://placecats.com/poppy/400/600"
				alt="Img 4"
				onclick="openModal(this.src)"
			/>
			<img
				class="rounded-md overflow-hidden"
				src="https://placecats.com/louie/400/600"
				alt="Img 5"
				onclick="openModal(this.src)"
			/>
			<img
				class="rounded-md overflow-hidden"
				src="https://placecats.com/millie_neo/400/600"
				alt="Img 6"
				onclick="openModal(this.src)"
			/>
		</SectionItems>
	</Section>
	<Section>
		<SectionTitle title="ALFOMBRA" />
		<SectionItems
			styles="grid grid-cols-3 grid-rows-2 gap-2 rounded-md max-h-[600px]"
		>
			<Image
				src={img1}
				class="col-span-1 row-span-1 object-cover h-full w-full"
				alt="Img 1"
				onclick="openModal(this.src)"
			/>
			<Image
				src={img1}
				class="col-span-2 row-span-1 object-cover h-full w-full"
				alt="Img 1"
				onclick="openModal(this.src)"
			/>
			<Image
				src={img1}
				class="col-span-1 row-span-1 object-cover h-full w-full"
				alt="Img 1"
				onclick="openModal(this.src)"
			/>
			<Image
				src={img1}
				class="col-span-2 row-span-1 object-cover h-full w-full"
				alt="Img 1"
				onclick="openModal(this.src)"
			/>
		</SectionItems>
	</Section>
