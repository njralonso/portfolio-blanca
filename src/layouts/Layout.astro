<style>
	@import url("https://fonts.googleapis.com/css2?family=Delius&display=swap");
	:global(:root) {
		--font-family-sans: "Delius", cursive;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: var(--font-family-sans);
	}
	main {
		margin: 0 auto;
		max-width: 1280px;
		padding: 0 2rem;
	}

	.underline-expand::before {
		content: "";
		position: absolute;
		left: 50%;
		bottom: 0;
		width: 0;
		height: 2px;
		background-color: #d9a0d2; /* Color de la subrayado */
		transition:
			width 0.3s ease,
			left 0.3s ease;
	}

	.underline-expand:hover::before {
		width: 100%;
		left: 0;
	}
</style>
